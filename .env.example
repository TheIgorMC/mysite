# Orion Project Environment Configuration
# Copy this file to .env and fill in your values

# IMPORTANT: Generate a secure secret key!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this

# Cloudflare Access Credentials (if using Cloudflare Access for API)
CF_ACCESS_CLIENT_ID=your-cf-client-id
CF_ACCESS_CLIENT_SECRET=your-cf-client-secret

# Email Configuration (for newsletter, notifications, etc.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_USE_TLS=true

# Database URL (default uses Docker volume)
DATABASE_URL=sqlite:////app/data/orion.db

# API Configuration
ORION_API_URL=https://api.orion-project.it:443

# Default Language (it or en)
DEFAULT_LANGUAGE=it
